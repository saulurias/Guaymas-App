<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#ffffff">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/imgNoticiaItem"
            android:src="@drawable/noticia_def"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#9d100136"
            android:layout_marginTop="-40dp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tiene Guaymas Reina y Rey feo de Carnaval para poder ir a comer unos tamales"
                android:id="@+id/txvTituloNoticiaItem"
                android:textColor="#ffffff"
                android:textAlignment="textStart"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:padding="2dp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>