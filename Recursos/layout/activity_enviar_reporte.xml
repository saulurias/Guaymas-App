<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#FFF"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:orientation="vertical"
        android:padding="@dimen/activity_horizontal_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">


        <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/layout_round_noborder1"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#264352"
                android:textStyle="bold"
                android:text="MI REPORTE"
                android:id="@+id/tvTitleDialog"
                android:textSize="22dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/layout_round_noborder4"
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#39667C"
                android:textStyle="bold"
                android:text="Hola &apos;NOMBRE&apos;"
                android:id="@+id/tvInterestName"
                android:layout_marginBottom="10dp"
                android:textAlignment="center"
                android:textSize="18dp" />

            <TextView
                android:textColor="#5089a6"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Su petición ha sido dada de alta en el sistema de recepción de reportes ciudadanos."
                android:id="@+id/textView19"
                android:textAlignment="center"
                android:textSize="16dp"
                android:layout_marginBottom="10dp" />

            <TextView
                android:textColor="#39667C"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Folio de seguimiento:"
                android:id="@+id/textView20"
                android:textAlignment="center"
                android:textSize="18dp"
                android:textStyle="bold"
                android:padding="2dp" />

            <TextView
                android:textColor="#39667C"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="12345"
                android:id="@+id/tvFolioResult"
                android:textAlignment="center"
                android:textSize="18dp"
                android:padding="2dp" />

            <TextView
                android:textColor="#5089a6"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Personal de la dirección de Atención Ciudadana se comunicará con usted para monitorear el avance de su reporte."
                android:id="@+id/textView22"
                android:textAlignment="center"
                android:textSize="16dp"
                android:layout_marginTop="10dp" />

            <TextView
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:padding="5dp"
                android:textColor="#5089a6"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Tel: (622) 2 07 57 | (622) 2 44 11 | 072"
                android:id="@+id/textView23"
                android:textAlignment="center"
                android:textSize="16dp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:onClick="returnToReport"
                    android:background="@drawable/btn_morado"
                    android:text="Regresar"
                    android:id="@+id/btnComeBackFromReport"
                    android:layout_weight="1"
                    android:textSize="16dp" />

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


</LinearLayout>