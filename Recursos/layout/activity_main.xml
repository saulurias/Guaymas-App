<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="mx.pitalla.g6.MainActivity"
    android:orientation="vertical">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_weight="1">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="@dimen/padding_botones">

                <ImageButton
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/btnNoticias"
                    android:src="@drawable/btnnoticias"
                    android:scaleType="centerInside"
                    android:background="#00000000"
                    android:padding="0dp"
                    android:onClick="irNoticias" />
            </LinearLayout>

            <ImageButton
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/imageButton8"
                android:layout_weight="1.5"
                android:background="#00000000" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="@dimen/padding_botones">

                <ImageButton
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/imageButton14"
                    android:src="@drawable/btneventos"
                    android:scaleType="centerInside"
                    android:background="#00000000"
                    android:padding="0dp"
                    android:onClick="irEventos" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_weight="1"
            android:padding="2dp">

            <ImageButton
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/imageButton4"
                android:layout_weight="1.3"
                android:background="#00000000" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="@dimen/padding_botones">

                <ImageButton
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/imageButton15"
                    android:src="@drawable/btnreporte"
                    android:scaleType="centerInside"
                    android:background="#00000000"
                    android:padding="0dp"
                    android:onClick="irRadio" />
            </LinearLayout>

            <ImageButton
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/imageButton6"
                android:layout_weight="1.3"
                android:background="#00000000" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_weight="1">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="@dimen/padding_botones">

                <ImageButton
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/imageButton16"
                    android:src="@drawable/btndirectorio"
                    android:scaleType="centerInside"
                    android:background="#00000000"
                    android:padding="0dp"
                    android:onClick="irReporte" />
            </LinearLayout>

            <ImageButton
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/imageButton2"
                android:layout_weight="1.5"
                android:background="#00000000" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="@dimen/padding_botones">

                <ImageButton
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/imageButton17"
                    android:src="@drawable/btnmedia"
                    android:scaleType="centerInside"
                    android:background="#00000000"
                    android:padding="0dp"
                    android:onClick="irDirectorio" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="6"
        android:background="#283140"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="www.guaymas.gob.mx"
            android:id="@+id/textView3"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:gravity="center|center_vertical|center_horizontal"
            android:textSize="15dp"
            android:onClick="irWeb"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/txvf" />


        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/txvf"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:gravity="center|center_vertical|center_horizontal"
            android:textSize="20dp"
            android:background="#00000000"
            android:src="@drawable/f"
            android:scaleType="fitCenter"
            android:onClick="irFacebook"
            android:layout_marginLeft="4dp"
            android:layout_alignTop="@+id/txvt"
            android:layout_toStartOf="@+id/txvt"
            android:adjustViewBounds="false"
            android:layout_alignParentBottom="true" />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/txvt"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:gravity="center|center_vertical|center_horizontal"
            android:textSize="20dp"
            android:background="#00000000"
            android:src="@drawable/t2"
            android:scaleType="fitCenter"
            android:onClick="irTwitter"
            android:layout_marginRight="4dp"
            android:layout_toStartOf="@+id/txvy"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true" />

        <ImageButton
            android:id="@+id/txvy"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:gravity="center|center_vertical|center_horizontal"
            android:textSize="20sp"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:src="@drawable/y"
            android:background="#00000000"
            android:scaleType="fitCenter"
            android:onClick="irYoutube"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true" />

    </RelativeLayout>

</LinearLayout>
