<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="mx.pitalla.g6.NoticiasActivity">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView2"
        android:padding="5dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:background="#ffffff"
            android:weightSum="1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/imgDetalleNoticia"
                android:src="@drawable/noticia_def"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:layout_margin="10dp"
                android:layout_weight="0.49" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Tiene Guaymas Reina y Rey feo de  Carnaval "
                android:id="@+id/txvTituloNoticiaDetalle"
                android:textColor="#1F3786"
                android:textAlignment="center"
                android:paddingStart="5dp"
                android:textSize="26dp"
                android:background="#ffffff"
                android:paddingEnd="5dp"
                android:textStyle="bold"
                android:paddingBottom="10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="27 de Enero del 2016 11:20 am"
                android:id="@+id/txvFechaNoticiaDetalle"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textColor="#00bbac"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contenido de la noticia"
                android:id="@+id/txvContenidoNoticiaDetalle"
                android:textSize="16dp"
                android:textColor="#444246"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>