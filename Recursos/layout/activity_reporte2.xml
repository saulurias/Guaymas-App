<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="mx.pitalla.g6.ReporteActivity"
    android:orientation="vertical">

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/report_progress"
        android:layout_gravity="center_horizontal"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollViewFormReport"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:padding="10dp"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Nuevo Reporte"
                android:id="@+id/textView"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                android:textColor="#591480"
                android:textSize="25dp"
                android:textAlignment="center"
                android:paddingStart="10dp"
                android:paddingEnd="10dp" />


            <!--Container form start-->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:padding="1dp"
                android:layout_height="wrap_content">



                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:gravity="center_horizontal"
                    android:text="¿Qué quieres reportar?"
                    android:drawableLeft="@drawable/document_file_pixel"
                    android:drawableRight="@drawable/document_file_pixel"
                    android:id="@+id/textView2"
                    android:textSize="16dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_marginBottom="3dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="3dp" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_marginBottom="8dp"
                    android:layout_height="130dp">

                    <ImageButton
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:id="@+id/imgBump"
                        android:src="@drawable/bache"
                        android:background="#00000000"
                        android:layout_weight="1"
                        android:onClick="selectBump"
                        android:layout_margin="1dp"
                        android:scaleType="centerInside" />

                    <ImageButton
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:id="@+id/imgLighting"
                        android:src="@drawable/alumbrado"
                        android:background="#00000000"
                        android:layout_weight="1"
                        android:onClick="selectLighting"
                        android:layout_margin="1dp"
                        android:scaleType="centerInside" />

                    <ImageButton
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:id="@+id/imgOther"
                        android:onClick="selectOther"
                        android:src="@drawable/otro"
                        android:background="#00000000"
                        android:layout_weight="1"
                        android:layout_margin="1dp"
                        android:scaleType="centerInside" />

                </LinearLayout>

                <!-- Interested End -->

                <!-- Address-->
                <!--  Address -->

                <!-- suburb-->



                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:background="@drawable/layout_round_bg"
                    android:paddingLeft="10dp"
                    android:layout_marginBottom="3dp"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:background="#fff"
                        android:layout_height="wrap_content">


                        <EditText
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textMultiLine|textCapSentences"
                            android:hint="Descripción"
                            android:ems="10"
                            android:gravity="top"
                            android:id="@+id/etSubject"
                            android:minLines="3" />

                        <EditText
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textCapWords|textPersonName"
                            android:ems="10"
                            android:hint="Interesado"
                            android:id="@+id/etInterested" />

                        <EditText
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:inputType="phone|number"
                            android:ems="10"
                            android:hint="Teléfono"
                            android:id="@+id/etTelephone" />

                    </LinearLayout>

                </LinearLayout>
                <!--  Cellphone -->

                <!-- Email-->
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:background="@drawable/layout_round_bg"
                    android:paddingLeft="10dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:background="#fff"
                        android:layout_height="wrap_content">

                        <EditText
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textEmailAddress"
                            android:ems="10"
                            android:hint="Correo (Opcional)"
                            android:id="@+id/etEmail" />

                    </LinearLayout>

                </LinearLayout>


                <!-- colonia-->
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:background="@drawable/layout_round_bg"
                    android:paddingLeft="10dp"
                    android:layout_marginBottom="3dp"
                    android:layout_height="wrap_content">


                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:background="#fff"
                        android:layout_height="wrap_content">


                        <Spinner
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:spinnerMode="dialog"
                            android:id="@+id/spSuburb" />

                    </LinearLayout>

                </LinearLayout>


                <!--  suburb -->


                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:gravity="center_horizontal"
                    android:text="Localización del reporte"
                    android:drawableLeft="@drawable/location_small"
                    android:drawableRight="@drawable/location_small"
                    android:id="@+id/tvIndicateMap"
                    android:textSize="16dp"
                    android:layout_marginTop="3dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_marginBottom="3dp" />

                <LinearLayout
                    android:id="@+id/containerMap"
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:background="@drawable/layout_round_bg"
                    android:paddingLeft="10dp"
                    android:layout_height="160dp">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:background="#CCC"
                        android:layout_height="fill_parent">


                        <fragment
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:name="com.google.android.gms.maps.SupportMapFragment"
                            android:id="@+id/mapReporte"
                            android:layout_gravity="center_horizontal" />

                    </LinearLayout>

                </LinearLayout>
                <!--  map -->

                <!-- Cellphone-->
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:gravity="center_horizontal"
                    android:text="Toque el mapa para modificar la localización"
                    android:id="@+id/textView6"
                    android:textSize="16dp"
                    android:layout_marginTop="3dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_marginBottom="7dp"
                    android:layout_gravity="center_horizontal" />



                <!-- colonia-->
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:background="@drawable/layout_round_bg"
                    android:paddingLeft="10dp"
                    android:layout_marginBottom="3dp"
                    android:layout_height="wrap_content">


                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:background="#fff"
                        android:layout_height="wrap_content">

                        <EditText
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textCapSentences|textPostalAddress"
                            android:ems="10"
                            android:hint="Dirección del reporte"
                            android:id="@+id/etAddress" />

                    </LinearLayout>



                </LinearLayout>


                <!--  Email -->

                <!--Type Choosen Start-->

                <!--Type Choosen End-->

                <!-- Subject-->
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:background="@drawable/layout_round_bg"
                    android:paddingLeft="10dp"
                    android:layout_marginBottom="3dp"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:background="#fff"
                        android:layout_height="wrap_content">

                    </LinearLayout>

                </LinearLayout>
                <!-- Subject -->

                <!-- photo-->
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp">


                    <Button
                        android:layout_width="210dp"
                        android:layout_height="wrap_content"
                        android:text="Agregar foto"
                        android:textColor="#ffffff"
                        android:background="@drawable/btn_morado"
                        android:onClick="addImage"
                        android:id="@+id/btnAddPhoto"
                        android:drawableLeft="@drawable/photo_camera2"
                        android:textSize="14dp"
                        android:paddingRight="20dp"
                        android:paddingLeft="20dp" />


                </LinearLayout>
                <!-- photo -->

                <!--foto preview-->
                <LinearLayout
                    android:id="@+id/containerPreview"
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="250dp"
                    android:layout_margin="3dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/imgPreview" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">


                    <Button
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:padding="0dp"
                        android:textColor="#fff"
                        android:onClick="sendReportButton"
                        android:background="@drawable/btn_morado"
                        android:text="Enviar reporte"
                        android:id="@+id/button"
                        android:textSize="18dp" />

                </LinearLayout>
                <!--foto preview-->

                <!-- Submit-->
                <!--  Submit -->


            </LinearLayout>
            <!--Container form end-->

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
